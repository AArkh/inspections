<idea-plugin>
	<id>com.custom.plugin</id>
	<name>Drom code inspections</name>
	<vendor email="arkharov@drom.ru" url="https://www.drom.ru/">Drom</vendor>

	<description><![CDATA[
      Plugin written in Kotlin for Kotlin syntax check to ensure that exceptions are checked
    ]]></description>

	<change-notes><![CDATA[
      Release notes : Initial release of a plugin
    ]]>
	</change-notes>

	<depends>com.intellij.modules.java</depends>

	<extensions defaultExtensionNs="com.intellij">
		<localInspection
			language="kotlin"
			displayName="Kotlin 'throw' operator without corresponding annotation or try/catch block"
			groupBundle="messages.InspectionsBundle"
			groupKey="group.names.probable.bugs"
			enabledByDefault="true"
			level="WARNING"
			implementationClass="com.plugin.inspection.KotlinDangerousMethodInspection"
		/>

		<localInspection
			language="kotlin"
			displayName="Kotlin try/catch surround"
			groupBundle="messages.InspectionsBundle"
			groupKey="group.names.probable.bugs"
			enabledByDefault="true"
			level="WARNING"
			implementationClass="com.plugin.inspection.KotlinThrowsMethodInspection"
		/>
	</extensions>

	<!-- Compatible with the following versions of IntelliJ Platform -->
	<!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
		 on how to target different products -->
	<depends>com.intellij.modules.platform</depends>
	<depends>com.intellij.modules.lang</depends>
	<depends>org.jetbrains.kotlin</depends>
</idea-plugin>